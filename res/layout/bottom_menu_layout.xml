<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"  
    android:background="@drawable/ic_menu_item_bg"> 
    
    <RelativeLayout	
	    android:id="@+id/menu_item_index_layout"
	    android:layout_width="0dp"  
	    android:layout_height="match_parent" 
	    android:layout_weight="1">
	  	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"  
	        android:orientation="vertical">
	        
	        <ImageView
	            android:id="@+id/menu_item_index_image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:src="@drawable/ic_menu_item_index"/>
	      
	    </LinearLayout>
     </RelativeLayout>
     

	 <RelativeLayout	
	    android:id="@+id/menu_item_seek_layout"
	    android:layout_width="0dp"  
	    android:layout_height="match_parent" 
	    android:layout_weight="1">
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"  
	        android:orientation="vertical">
	        
	        <ImageView
	            android:id="@+id/menu_item_seek_image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:src="@drawable/ic_menu_item_seek"/>
	       
	    </LinearLayout>
      </RelativeLayout>
      
	<!-- 涓汉涓績 -->
	 <RelativeLayout
	    android:id="@+id/menu_item_mine_layout"
	    android:layout_width="0dp"  
	    android:layout_height="match_parent" 
	    android:layout_weight="1">
	   	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"  
	        android:orientation="vertical">
	        
	        <ImageView
	            android:id="@+id/menu_item_mine_image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:src="@drawable/ic_menu_item_mine"/>
	     
	    </LinearLayout>
     </RelativeLayout>
   
</LinearLayout>
